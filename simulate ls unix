"""
ls_sim.py
Simple ls-like listing with option to show hidden files and sizes.
"""
import os
import argparse

def ls(path=".", show_all=False):
    for name in sorted(os.listdir(path)):
        if not show_all and name.startswith("."):
            continue
        size = os.path.getsize(os.path.join(path, name))
        print(f"{name}\t{size}")

if __name__ == "__main__":
    import sys
    show_all = "-a" in sys.argv
    path = sys.argv[1] if len(sys.argv) > 1 and sys.argv[1] != "-a" else "."
    ls(path, show_all)
